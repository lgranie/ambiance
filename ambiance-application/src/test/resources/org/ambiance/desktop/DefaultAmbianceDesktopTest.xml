<component-set>
  <components>
    <component>
      <role>org.ambiance.desktop.AmbianceDesktop</role>
      <role-hint>default</role-hint>
      <implementation>org.ambiance.desktop.DefaultAmbianceDesktop</implementation>
      <description></description>
      <requirements>
        <requirement>
          <role>org.ambiance.desktop.view.AmbianceView</role>
          <role-hints>
            <role-hint>music</role-hint>
            <role-hint>game</role-hint>
          </role-hints>
          <field-name>views</field-name>
        </requirement>
      </requirements>
      <configuration>
        <title>Ambiance Desktop</title>
        <is-full-screen>true</is-full-screen>
        <dimension>
          <width>1024</width>
          <height>768</height>
        </dimension>
      </configuration>
    </component>
    
    <component>
      <role>org.ambiance.desktop.view.AmbianceView</role>
      <role-hint>game</role-hint>
      <implementation>org.ambiance.desktop.view.AmbianceViewGame</implementation>
      <description></description>
    </component>
    <component>
      <role>org.ambiance.desktop.view.AmbianceView</role>
      <role-hint>music</role-hint>
      <implementation>org.ambiance.desktop.view.AmbianceViewMusic</implementation>
      <description></description>
    </component>       
  </components>
</component-set>
